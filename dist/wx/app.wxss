
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
page {
  width: 100%;
  height: 100%;
}
.wrap ._section {
  flex: 1;
  overflow: scroll;
}
._dl {
  padding: 20rpx 20rpx;
}
._dl ._dt .small_img {
  background-image: linear-gradient(to right, #26c5fd, #fc5d7b);
}
._dl ._dd ._h1 {
  font-size: 30rpx;
}
._dl ._dd ._h2 ._h3 {
  color: #fc5d7b;
}
._dl ._dd ._h2 ._h4 {
  color: #666;
  text-decoration: line-through;
  font-size: 25rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}