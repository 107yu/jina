
.wrap {
  width: 100%;
  height: 100%;
}
.swiper {
  width: 100%;
  height: 400rpx;
}
.swiper ._img {
  width: 100%;
  height: 100%;
  display: block;
}
.tit {
  display: flex;
  justify-content: space-between;
  padding: 0 34rpx;
  box-sizing: border-box;
  height: 84rpx;
  line-height: 84rpx;
  background: #FFF;
  color: #CCC;
}
.tit .ones {
  display: flex;
}
.tit .ones ._p {
  font-size: 36rpx;
  color: #fc5d7b;
}
.tit .ones .price {
  font-size: 50rpx;
  margin-right: 10rpx;
}
.tit .ones .num {
  height: 84rpx;
  color: #a87832;
  line-height: 84rpx;
}
.tit .ones ._p:nth-child(1) {
  font-size: 35rpx;
  height: 84rpx;
  line-height: 84rpx;
}
.tit .times {
  float: right;
  font-size: 36rpx;
  color: #fc5d7b;
}
.title {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.title .names {
  font-size: 38rpx;
  color: #323a45;
}
.title ._p {
  display: flex;
  justify-content: space-between;
  line-height: 3;
  font-size: 32rpx;
  color: #999da2;
}
.hui {
  width: 100%;
  display: flex;
}
.hui ._img {
  width: 50rpx;
  height: 40rpx;
  padding-left: 20rpx;
}
.hui ._p {
  font-size: 30rpx;
  padding-left: 25rpx;
}
.hui ._p ._span {
  color: #a87832;
}
.list {
  width: 100%;
  padding: 0 2%;
  box-sizing: border-box;
}
.list .lis {
  display: flex;
  font-size: 33rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.list .lis ._span {
  color: #676767;
}
.list .lis .rights {
  flex: 1;
  color: #323a45;
  display: flex;
  padding: 0 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.list .lis .rights ._img {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}
.list .lis .to2color {
  color: #fc5d7b;
}
.pic {
  width: 100%;
  margin-bottom: 80rpx;
}
.pic ._img {
  width: 100%;
  display: block;
}
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #ccc;
  text-align: center;
  display: flex;
  background: #fff;
}
.footer .lefts {
  width: 30%;
}
.footer .lefts ._p {
  font-size: 32rpx;
}
.footer .lefts ._img {
  width: 34rpx;
  height: 32rpx;
}
.footer ._button {
  width: 45%;
  background: linear-gradient(217deg, #f86367 0%, #fb2579 100%);
  font-size: 38rpx;
  color: #fff;
}
.footer .colos {
  color: #FFF;
}